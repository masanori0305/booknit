<div class="new_contents">
<div>
  <%= form_tag('/books', method: :post) do %>
    <h2 class=category_title>
      New Post
    </h2>
    <ul style = "list-style:none" class = "col-md-4 col-md-offset-4">
        <li><input class="new_post" placeholder="本のタイトル" type="text" name="title" value="<%= @title %>"></li>
        <li><input class="new_post" placeholder="著者名" type="text" name="author" value="<%= @author %>"></li>
        <li><input class="new_post" placeholder="出版社" type="text" name="publisher" value = "<%= @publisher %>"></li>
        <li><input class="new_post" placeholder="Image Url" type="text" name="image" value = "<%= @book_image %>"></li>
        <li class="evaluation">
              <input id="star1" type="radio" name="rate" value="5" />
              <label for="star1"><span class="text"></span>★</label>
              <input id="star2" type="radio" name="rate" value="4" />
              <label for="star2"><span class="text"></span>★</label>
              <input id="star3" type="radio" name="rate" value="3" />
              <label for="star3"><span class="text"></span>★</label>
              <input id="star4" type="radio" name="rate" value="2" />
              <label for="star4"><span class="text"></span>★</label>
              <input id="star5" type="radio" name="rate" value="1" />
              <label for="star5"><span class="text"></span>★</label>
        </li>
        <li><textarea class = "review" cols="55" name="review" placeholder="誰に勧めたいか・要約(あらすじ)・感想・分析など" rows="30"></textarea></li>
        <li><Button class = "button_type submit_button" type="submit">SEND</Button></li>
    </ul>
  <% end %>
  </div>
</div>
