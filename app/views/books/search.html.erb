<div>
  <div>
    <%= form_tag('/books/search', method: :get) do %>
        <input id="keyword" placeholder="キーワードを打ち込んでください"%><button id = "button" title="検索" type="submit">検索</button>
    <% end %>
  </div>
  <h2>検索結果</h2>
    <div>
    <%= @document['Items'].each do |item| %>
    <ul>
       <li> <%= item['Item']['title'] %> </li>
       <li> <%= item['Item']['author'] %> </li>
    </ul>
    <% end %>
    </div>
  </div>
</div>