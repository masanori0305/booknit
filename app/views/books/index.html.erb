
  <div class="contents clearfix">
  <h2 class= category_title> Timeline </h2>
  <%= link_to "Sign in with Facebook yamashita", user_facebook_omniauth_callback_path(:facebook) %>
  <% @books.each do |book| %>
      <div class="books_container">
         <article class="book_container">
           <div class="book_image"><img src=<%= book.image %>></div>
            <div class="text">
            <a href="/books/<%=book.id%>}">
              <h4><%= book.title %></h4>
             </a>
              <div class="wrap">
                <h5>[満足度]</h5>
                  <span class="rate rate<%=book.rate%>"></span>
              </div>
              <p><%= book.review %> <a href="/books/<%=book.id%>">...続きを読む</a></p>
              <p>by <a href="/users/<%=book.user.id%>"><%=book.user.nickname%></a></p>
            </div>
         </article>
       </div>
    <%end%>
  </div>

  <footer>
   <p>
     <small>
        Copyright(C) BooKnit ALL RIGHTS RESERVED.
    </small>
   </p>
  </footer>
</body>
</html>
